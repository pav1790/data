# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                               controllers.HomeController.index

# Events
GET     /events                         controllers.EventController.index
POST    /events/create                  controllers.EventController.createEvent

GET     /events/:id                     controllers.EventController.getEventData(id)
POST    /events/:id                     controllers.EventController.editEventData(id)

GET     /events/:id/participants        controllers.EventController.getParticipantList(id)
POST    /events/:id/participants        controllers.EventController.addParticipant(id)
GET     /events/:id/participants/:id    controllers.EventController.getParticipant(id)

GET     /participants                   controllers.EventController.viewAllParticipants

GET     /organizers                     controllers.OrganizerController.viewAllOrganizers
POST    /organizers/create              controllers.OrganizerController.createOrganizer


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                   controllers.Assets.versioned(path="/public", file: Asset)
