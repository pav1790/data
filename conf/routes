# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

# Events
GET     /events                     controllers.EventController.index
POST    /events/create              controllers.EventController.createEvent

GET     /events/:id                 controllers.EventController.getEventData(id)
POST    /events/:id                 controllers.EventController.editEventData(id)

GET     /events/:id/participants    controllers.EventController.getParticipantList(id)
POST    /events/:id/participants    controllers.EventController.addParticipant(id)

# Participant Registration
GET     /participants               controllers.ParticipantController.index
POST    /participants/register      controllers.ParticipantController.register
GET     /participants/:id           controllers.ParticipantController.getParticipant(id)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
